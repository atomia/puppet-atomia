[global]
   workgroup = <%= scope.function_hiera(['atomia::active_directory::netbios_domain_name']) %>
   realm = <%= scope.function_hiera(['atomia::active_directory::domain_name']) %>
   server string = %h server (Samba, Ubuntu)
   dns proxy = no
   log file = /var/log/samba/log.%m
   max log size = 1000
   syslog = 0
   panic action = /usr/share/samba/panic-action %d
   server role = standalone server
   passdb backend = tdbsam
   obey pam restrictions = yes
   unix password sync = yes
   passwd program = /usr/bin/passwd %u
   passwd chat = *Enter\snew\s*\spassword:* %n\n *Retype\snew\s*\spassword:* %n\n *password\supdated\ssuccessfully* .
   pam password change = yes
   map to guest = bad user
   username map = /etc/samba/smbusers
   idmap config *:backend = tdb
   idmap config *:range = 10000-1000000
   idmap config <%= scope.function_hiera(['atomia::active_directory::netbios_domain_name']) %>:backend = ad
   idmap config <%= scope.function_hiera(['atomia::active_directory::netbios_domain_name']) %>:schema_mode = rfc2307
   idmap config <%= scope.function_hiera(['atomia::active_directory::netbios_domain_name']) %>:range = 0-10000000
   winbind nss info = rfc2307
   winbind trusted domains only = no
   winbind use default domain = yes
   winbind enum users  = yes
   winbind enum groups = yes
   template shell = /bin/bash
   usershare allow guests = yes
   security = ads

[syspool_content]
        comment = storage share
        read only = No
        path = /storage/content

[configshare]
        comment = config share
        read only = No
        path = /storage/configuration
