<resourceDescription xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">
  <bindings xdt:Locator="XPath(//bindings[moduleList/module/@name='Atomia.Provisioning.Modules.PureFTPD.PureFTPD'])">
    <resourceList>
      <resource name="PureFTPD" xdt:Transform="Insert">
        <property name="DatabaseHost"><%= @pureftp_databasehost %></property>
        <property name="DatabaseName">pureftpd</property>
        <property name="Username"><%= @pureftp_username %></property>
        <property name="Password"><%= @pureftp_password %></property>
        <property name="EncryptionMethod">md5</property>
        <property name="ClusterIpAddress"><%= @pureftp_clusterip %></property>
        <property name="FileSystemAgentUrl">http://<%= @pureftp_fsagenturl %>:10201/</property>
        <property name="FileSystemAgentUsername"><%= @pureftp_fsagentusername %></property>
        <property name="FileSystemAgentPassword"><%= @pureftp_fsagentpassword %></property>
        <property name="StorageRoot"><%= @pureftp_storageroot %></property>
      </resource>
    </resourceList>
  </bindings>
</resourceDescription>
