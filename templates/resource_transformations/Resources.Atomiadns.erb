<resourceDescription xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">
  <bindings xdt:Locator="XPath(//bindings[moduleList/module/@name='Atomia.Provisioning.Modules.Dns.Dns'])">
    <resourceList>
      <resource name="AtomiaDNS" xdt:Transform="Insert">
        <property name="URL"><%= @atomiadns_url %></property>
        <property name="Username"><%= @atomiadns_username %></property>
        <property name="Password"><%= @atomiadns_password %></property>
        <property name="Nameservers"><%= @atomiadns_nameservers.gsub('[','').gsub(']','').gsub(/\s+/, '') %></property>
        <property name="NameserverGroup"><%= @atomiadns_nameservergroup %></property>
      </resource>
    </resourceList>
  </bindings>
</resourceDescription>

